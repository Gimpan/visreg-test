{
	"name": "visreg-test", 
	"version": "1.0.18",
	"description": "A universal visual regression testing tool which is quick and easy to set up with a simple and convenient UI to run and assess visual regression.",
	"main": "dist/run-test.js",
	"types": "dist/visreg.d.ts",
	"scripts": {
		"test": "node ./dist/visreg.js",
		"dev-build-and-test": "tsc && node ./dist/visreg.js",
		"build": "tsc",
		"watch": "tsc --watch",
		"test-dev": "ts-node ./visreg.ts",
		"prepublish": "npm run build",
		"pub": "tsc && npm publish",
		"create-symlink": "node -e \"require('fs').symlinkSync('./dist', process.argv[1] + '/node_modules/visreg-test/dist')\""

	},
	"bin": {
		"visreg-test": "dist/visreg.js"
	},
	"author": "Christofer Haglund <cchaglund@users.noreply.github.com>",
	"license": "LGPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/cchaglund/visreg-test"
	},
	"dependencies": {
		"cypress-image-snapshot-fork-2": "9.0.1-3",
        "local-cypress": "1.2.6"
    },
    "devDependencies": {
        "ts-node": "10.2.1",
        "typescript": "5.3.2"
    },
	"files": ["dist"]
}