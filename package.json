{
	"name": "visual-regression-testing",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"full-suite": "./review_diffs.sh --full-suite",
		"retest-only-diffs": "./review_diffs.sh --retest-diffs",
		"assess-existing-diffs": "./review_diffs.sh --assess-diffs",


		"full-regression-test": "npx cypress run --spec cypress/e2e/production.cy.ts --env failOnSnapshotDiff=false; npx cypress run --spec cypress/e2e/updated-snapshots.cy.ts --env failOnSnapshotDiff=false; ./review_diffs.sh",
		"test": "npx cypress run --spec cypress/e2e/review-diffs.cy.ts --env failOnSnapshotDiff=false; ./review_diffs.sh",
		"test-with-browser": "npx cypress run --headed --env failOnSnapshotDiff=false",
		"test-interactive": "npx cypress open --env failOnSnapshotDiff=false",
		"requirements": "node ./tools/requirements.js"
	},
	"author": "Christofer Haglund",
	"license": "ISC",
	"devDependencies": {
		"@simonsmith/cypress-image-snapshot": "9.0.1",
		"cypress": "13.5.1",
		"requirements": "1.4.1",
		"typescript": "^5.3.2"
	}
}
