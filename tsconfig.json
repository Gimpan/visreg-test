{
	"compilerOptions": {
		"strict": true,
		"outDir": "dist",
		"rootDir": "src",
		"target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "lib": ["es2015", "dom"],
		"baseUrl": ".",
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"src/scaffold/**/*",
	],
	"moduleResolution": "node",
}